// cronometro.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"
#include <Windows.h>

int main(){
	int h=0,m=0,s=0;
	if (h>24){
		h=0;
	}
		if (m>59){
			m=0;
			h=h+1;
		}
			if (s>59){
				s=0;
				m=m+1;
			}
				cout << h << ":" << m << ":" << s << endl;
				s=s+1;
				sleep (1000);
				system ("cls");

		
	getch ();
	return 0;
}
